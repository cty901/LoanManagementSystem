                        <DockPanel LastChildFill="True"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <StackPanel>
                                <StackPanel>
                                    <ListView x:Name="CustomerListView" AlternationCount="10000" ItemsSource="{Binding CustomerList}" util:GridViewColumnResize.Enabled="True" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto"  MinHeight="100" BorderBrush="{x:Null}" Background="{x:Null}">
                                        <!--<ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="100*" />
                                                        <ColumnDefinition Width="30*" />
                                                        <ColumnDefinition Width="75*" />
                                                        <ColumnDefinition Width="50*" />
                                                        <ColumnDefinition Width="30*" />
