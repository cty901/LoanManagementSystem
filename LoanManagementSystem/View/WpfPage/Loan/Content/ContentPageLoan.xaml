<Page x:Class="LoanManagementSystem.View.WpfPage.Loan.Content.ContentPageLoan"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="430" d:DesignWidth="760"
	  SizeChanged="Page_SizeChanged">
    <ScrollViewer x:Name="ScrollBar" Margin="0,0,0,0" MinHeight="430" Height="430">
        <Grid>
            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" >
                <StackPanel Orientation="Vertical"  >
                    <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </DockPanel>
        </Grid>
    </ScrollViewer>
</Page>
